// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 管理者テーブル
model Admin {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  supabaseUid String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  teams       Team[]
}

// チームテーブル
model Team {
  id                  Int                   @id @default(autoincrement())
  teamName            String
  teamCode            String                @unique
  memberCount         Int
  adminId             Int
  admin               Admin                 @relation(fields: [adminId], references: [id], onDelete: Cascade)
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  members             Member[]
  rides               Ride[]
  availabilityDrivers AvailabilityDriver[]
  viewPinHash         String?
  pin                 String?
  maxGrade            Int                   @default(6)
}

// 家族テーブル
model Member {
  id                  Int                  @id @default(autoincrement())
  teamId              Int
  team                Team                 @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  children            Child[]
  guardians           Guardian[]
}

// 保護者テーブル
model Guardian {
  id                  Int                  @id @default(autoincrement())
  name                String               
  memberId            Int                  
  member              Member               @relation(fields: [memberId], references: [id], onDelete: Cascade)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  availabilityDrivers AvailabilityDriver[] 
}

// 子供テーブル
model Child {
  id              Int              @id @default(autoincrement())
  name            String
  grade           Int?
  gradeYear       Int?
  memberId        Int
  member          Member           @relation(fields: [memberId], references: [id], onDelete: Cascade)
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  rideAssignments RideAssignment[]
  childAvailabilities ChildAvailability[]
}

// 配車テーブル
model Ride {
  id                  Int                  @id @default(autoincrement())
  date                DateTime
  destination         String
  deadline            DateTime?
  teamId              Int
  team                Team                 @relation(fields: [teamId], references: [id], onDelete: Cascade)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  rideAssignments     RideAssignment[]
  drivers             Driver[]
  availabilityDrivers AvailabilityDriver[]
  childAvailabilities ChildAvailability[]
}

// 配車可能保護者テーブル
model AvailabilityDriver {
  id           Int      @id @default(autoincrement())
  availability Boolean  @default(false)
  seats        Int      @default(0)
  comment      String?
  guardianId   Int
  guardian     Guardian @relation(fields: [guardianId], references: [id], onDelete: Cascade)
  teamId       Int
  team         Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  rideId       Int
  ride         Ride     @relation(fields: [rideId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  driver       Driver[]

  @@unique([rideId, guardianId], name: "rideId_guardianId")
}

// 配車実施保護者テーブル
model Driver {
  id                   Int                @id @default(autoincrement())
  rideId               Int
  ride                 Ride               @relation(fields: [rideId], references: [id], onDelete: Cascade)
  availabilityDriverId Int                
  availabilityDriver   AvailabilityDriver @relation(fields: [availabilityDriverId], references: [id], onDelete: Cascade)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
  rideAssignments      RideAssignment[]

  @@unique([rideId, availabilityDriverId])
}

// 乗車子供テーブル
model RideAssignment {
  id        Int      @id @default(autoincrement())
  rideId    Int
  ride      Ride     @relation(fields: [rideId], references: [id], onDelete: Cascade)
  driverId  Int
  driver    Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
  childId   Int
  child     Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([driverId, childId])
}

// 参加不可子供テーブル
model ChildAvailability {
  id           Int      @id @default(autoincrement())
  availability Boolean  @default(false)  // false = 参加不可
  childId      Int
  child        Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  rideId       Int
  ride         Ride     @relation(fields: [rideId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([rideId, childId], name: "rideId_childId")
}